datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  uid       String?  @unique
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Sku {
  createdAt       DateTime        @default(now())
  fulfillmentInfo Json?
  id              String          @id @default(cuid())
  inclusionSku    SkuPackage[]    @relation(name: "SkuInclusionSkuSkuPackageInclusionSku")
  skuDescription  String?
  skuGroupId      SkuGroup?       @relation(fields: [skuGroupIdId], references: [id])
  skuGroupIdId    String?
  skuName         String?
  skuPackages     SkuPackage[]    @relation(name: "SkuOnSkuPackages")
  skuSubGroupId   SkuSubGroup?    @relation(fields: [skuSubGroupIdId], references: [id])
  skuSubGroupIdId String?
  skuType         EnumSkuSkuType?
  updatedAt       DateTime        @updatedAt
}

model SkuGroup {
  createdAt    DateTime      @default(now())
  id           String        @id @default(cuid())
  skuGroupName String?
  skus         Sku[]
  skuSubGroups SkuSubGroup[]
  updatedAt    DateTime      @updatedAt
}

model SkuSubGroup {
  createdAt       DateTime  @default(now())
  id              String    @id @default(cuid())
  skuGroupId      SkuGroup? @relation(fields: [skuGroupIdId], references: [id])
  skuGroupIdId    String?
  skus            Sku[]
  skuSubGroupName String?
  updatedAt       DateTime  @updatedAt
}

model SkuPackage {
  createdAt         DateTime @default(now())
  id                String   @id @default(cuid())
  inclusionSku      Sku?     @relation(name: "SkuInclusionSkuSkuPackageInclusionSku", fields: [inclusionSkuId], references: [id])
  inclusionSkuId    String?
  inclusionSkuPrice Float?
  sku               Sku?     @relation(name: "SkuOnSkuPackages", fields: [skuId], references: [id])
  skuId             String?
  updatedAt         DateTime @updatedAt
}

enum EnumSkuSkuType {
  Item
  Package
}